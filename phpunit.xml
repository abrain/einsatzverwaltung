<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.5/phpunit.xsd" bootstrap="tests/unit/bootstrap.php" beStrictAboutCoversAnnotation="true" beStrictAboutTodoAnnotatedTests="true" colors="true" forceCoversAnnotation="true" convertDeprecationsToExceptions="true">
  <coverage>
    <include>
      <directory suffix=".php">./src</directory>
    </include>
    <report>
      <clover outputFile="build/logs/clover.xml"/>
      <text outputFile="php://stdout"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="unit">
      <directory>./tests/unit/</directory>
    </testsuite>
  </testsuites>
</phpunit>
